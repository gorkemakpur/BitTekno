
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- wishlist main wrapper start -->
<div class="wishlist-main-wrapper mt-30 mb-50">
    <div class="container">
        <!-- Wishlist Page Content Start -->
        <div class="row">
            <div class="col-lg-12">
                <!-- Wishlist Table Area -->
                <div class="cart-table table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="pro-thumbnail">Resim</th>
                                <th class="pro-title">Ürün Adı</th>
                                <th class="pro-price">Fiyatı</th>
                                <th class="pro-quantity">Stok Bilgisi</th>
                                <th class="pro-subtotal">Sepete Ekle</th>
                                <th class="pro-remove">Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="pro-thumbnail">
                                    <a href="#">
                                        <img class="img-fluid" src="~/wwwroot/img/product/Iphone11.jpg"
                                             alt="Product" />
                                    </a>
                                </td>
                                <td class="pro-title"><a href="#">Iphone 11</a></td>
                                <td class="pro-price"><span>13.000TL</span></td>
                                <td class="pro-quantity"><span class="text-success">Stokta</span></td>
                                <td class="pro-subtotal"><a href="cart.html" class="sqr-btn text-white">Sepete ekle</a></td>
                                <td class="pro-remove"><a href="#"><i class="fa fa-trash-o"></i></a></td>
                            </tr>
                         
                            <tr>
                                <td class="pro-thumbnail">
                                    <a href="#">
                                        <img class="img-fluid" src="assets/img/product/product-img9.jpg"
                                             alt="Product" />
                                    </a>
                                </td>
                                <td class="pro-title"><a href="#">Ürünün ismi burada</a></td>
                                <td class="pro-price"><span>Fiyat Bilgisi burada</span></td>
                                <td class="pro-quantity"><span class="text-danger">Stok bilgisi burada</span></td>
                                <td class="pro-subtotal"><a href="cart.html" class="sqr-btn text-white disabled">Sepete ekleme kısmı burada</a></td>
                                <td class="pro-remove"><a href="#"><i class="fa fa-trash-o"></i></a></td>
                            </tr>
                         
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- Wishlist Page Content End -->
    </div>
</div>
<!-- wishlist main wrapper end -->